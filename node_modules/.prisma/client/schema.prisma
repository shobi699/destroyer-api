// prisma/schema.prisma — نسخه مخصوص Prisma Accelerate (Postgres Proxy)

// اتصال به دیتابیس از طریق Accelerate
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // از همون prisma+postgres:// استفاده کن
}

generator client {
  provider = "prisma-client-js"
}

// جداول نمونه
model AnswerStat {
  id        Int      @id @default(autoincrement())
  target    String
  answer    String
  count     Int      @default(1)
  updatedAt DateTime @updatedAt
}

model Game {
  id         Int      @id @default(autoincrement())
  userId     String
  mode       String
  totalScore Int
  createdAt  DateTime @default(now())
}
